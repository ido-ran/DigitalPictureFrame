<UserControl x:Class="DigitalFrame.Module.Time.Views.TimeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel VerticalAlignment="Bottom"
                Margin="0,0,0,10">
        <TextBlock Text="{Binding CurrentFormattedTime}"
                   x:Name="CurrentTime"
                   FontSize="36"
                   HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentFormattedDate}"
                   x:Name="CurrentDate"
                   HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
